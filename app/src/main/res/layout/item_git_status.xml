<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conflicting"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/status_conflicting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Added"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/status_added"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Changed"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/status_changed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Missing"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/status_missing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modified"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/status_modified"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Removed"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/status_removed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Uncommitted Changes"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/status_uncommitted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Untracked"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/status_untracked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Untracked Folders"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/status_untracked_folders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp" />

</LinearLayout>