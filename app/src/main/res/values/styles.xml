<resources>

    <style name="Hyper" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#FF5722</item>
        <item name="colorPrimaryDark">#E64A19</item>
        <item name="colorAccent">#2196F3</item>
        <item name="itemTextColor">#000000</item>
    </style>

    <style name="Hyper.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">#FF5722</item>
        <item name="colorPrimaryDark">#E64A19</item>
        <item name="colorAccent">#2196F3</item>
        <item name="itemTextColor">#FFFFFF</item>
    </style>

    <style name="TextAppearance.Hyper.FloatLabel" parent="android:TextAppearance.Small">
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textSize">12sp</item>
